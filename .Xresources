! XTerm configurations
*.termName: xterm-256color
*.vt100.locale: true
*.vt100.metaSendsEscape: true
*.vt100.deleteSendsEscape: true
*.vt100.eightBitInput: false
*.vt100.backarrowKey: false
*.ttyModes: erase ^?
*.vt100.selectToClipboard: true
*.vt100.trimSelection: true
*.vt100.highlightSelection: true
*.vt100.scrollBar: false
*.vt100.scrollKey: true
*.vt100.scrollTtyOutput: false
*.vt100.geometry: 80x32
*.vt100.bellIsUrgent: true
*.vt100.boldMode: true
*.vt100.cursorBlink: true

! Font
*.vt100.faceName: FiraCode:size=12:antialias=true
*.vt100.faceSize0: 8
*.vt100.faceSize1: 10
*.vt100.faceSize2: 12
*.vt100.faceSize3: 16
*.vt100.faceSize4: 18
*.vt100.faceSize5: 20
*.vt100.faceSize7: 22

*.vt100.translations: #override \n\
	Shift <KeyPress> Insert: insert-selection(CLIPBOARD) \n\
	Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
	Ctrl Shift <Key>C:    copy-selection(CLIPBOARD) \n\
	Ctrl <Btn1Up>: exec-formatted("xdg-open '%t'", PRIMARY)

