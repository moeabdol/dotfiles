alt + {Up,Down,Right}
	$HOME/.local/bin/change-volume {up,down,mute}

XF86AudioMute
	$HOME/.local/bin/change-volume mute

XF86AudioRaiseVolume
	$HOME/.local/bin/change-volume up

XF86AudioLowerVolume
	$HOME/.local/bin/change-volume down

XF86MonBrightnessUp
	$HOME/.local/bin/change-brightness up

XF86MonBrightnessDown
	$HOME/.local/bin/change-brightness down

alt + d
	rofi -show drun

alt + c
	rofi -show calc -no-show-match -no-sort -no-show-icons

alt + i
	rofi -modi emoji -show emoji -no-show-icons

alt + p
	$HOME/.local/bin/rofi-pass

alt + ctrl + s
	$HOME/.local/bin/rofi-web-search

alt + ctrl + l
	$HOME/.local/bin/lock_screen

alt + ctrl + a
	setxkbmap ara

alt + ctrl + e
	setxkbmap us
