[user]
	name="Mohammed Saed"
	email=mohd.a.saed@gmail.com
	signingkey=mohd.a.saed@gmail.com
[init]
	defaultBranch=main
[commit]
	gpgsign=true
[tag]
	gpgSign=true
[core]
	excludefile=/home/moeabdol/.gitignore
	excludesfile=/home/moeabdol/.gitignore
	pager=delta
[pull]
	rebase=false
[pager]
	log=bat
	status=bat
	show=delta
	diff=delta
	blame=delta
[interactive]
	keep-plus-minus-markers=true
	diffFilter="delta --features=interactive --color-only"
[delta]
	navigate=true
	features=decorations
	side-by-side=false
	true-color=always
	line-numbers=true
  line-numbers-zero-style="dim auto"
  line-numbers-plus-style="green auto"
  line-numbers-minus-style="red auto"
	zero-style="dim auto"
	plus-style="green auto"
	plus-emph-style="green bold auto"
  plus-non-emph-style="green auto"
	minus-style="red auto"
	minus-emph-style="red bold auto"
	minus-non-emph-style="red auto"
[diff]
	colorMoved = default
	tool = vimdiff
[delta "decorations"]
	commit-decoration-style="blue ol"
	commit-style=raw
	file-style=omit
	hunk-header-decoration-style="blue box"
	hunk-header-file-style=red
	hunk-header-line-number-style="#067a00"
	hunk-header-style="file line-number syntax"
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vimdiff \"$LOCAL\" \"$REMOTE\"
